<div class="row">
    {{> actions productos = rs}}

    <div class="col mx-auto mt-4">
        <div class="table-wrapper-scroll-y my-custom-scrollbar mt-20">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark" align="center">
                        <tr>
                            <th colspan="2"></th>
                            <th colspan="3">
                                <div align="center">Compras/Ingresos</div>
                            </th>
                            <th colspan="3">
                                <div align="center">Ventas/Egresos</div>
                            </th>
                            <th colspan="3">
                                <div align="center">Saldo</div>
                            </th>
                        </tr>
                    </thead>
                    <thead class="thead-dark" align="center">
                        <tr>
                            <th>Fecha</th>
                            <th>Detalle</th>
                            <th>Q</th>
                            <th>CU</th>
                            <th>CT</th>

                            <th>Q</th>
                            <th>CU</th>
                            <th>CT</th>

                            <th>Q</th>
                            <th>CU</th>
                            <th>CT</th>
                        </tr>
                    </thead>
                    <tbody align="center">
                        {{#each rs}}
                        <tr>
                            <th>{{this.fecha}}</th>
                            <td>{{this.nombre_detalle}}</td>
                            <td>{{this.entrada_cantidad}}</td>
                            <td>{{this.entrada_unitario}}</td>
                            <td>{{this.entrada_total}}</td>

                            <td>{{this.salida_cantidad}}</td>
                            <td>{{this.salida_unitario}}</td>
                            <td>{{this.salida_total}}</td>

                            <td>{{this.producto_cantidad}}</td>
                            <td>{{this.producto_unitario}}</td>
                            <td>{{this.producto_total}}</td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>