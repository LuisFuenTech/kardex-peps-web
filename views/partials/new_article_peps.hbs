<div class="col-sm-3 mt-4">
    <div class="card mt-0 mb-4 ">
        <h5 class="card-header white-text text-center py-4">
            <strong>Artículo</strong>
        </h5>

        <div class="card-body">

            <form action="/peps/add-product" method="POST" class="text-center" style="color: #00838f;">
                <div class="md-form mb-0">
                    <select class="custom-select" id="articulo_peps" name="articulo">
                        <option>Artículo </option>

                        {{#each productos}}
                        <option {{#if this.selected}} selected='true' {{/if}}>{{this.nombre_producto}} </option>
                        {{/each}}

                    </select>
                </div>

                <div class="md-form mt-4">
                    <input type="text" id="nombre" name="nombre" class="form-control mb-4" autofocus
                        placeholder="Nombre">
                </div>

                <div class="form-row">
                    <div class="col">
                        <div class="md-form">
                            <input type="text" id="cantidad" name="cantidad" class="form-control mb-4"
                                placeholder="Cantidad">
                        </div>
                    </div>

                    <div class="col">
                        <div class="md-form">
                            <input type="text" id="costo_unitario" name="costo_unitario" class="form-control mb-4"
                                placeholder="Costo unitario">
                        </div>
                    </div>
                </div>


                <div class="md-form-row">
                    <div class="col">
                        <button class="btn btn-sm btn-customer my-0" type="submit">Aceptar</button>
                        <a id="cancelar-articulo" class="btn btn-sm btn-danger my-1" href="#">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>